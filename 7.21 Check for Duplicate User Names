#! /bin/bash
clear

echo "7.21 Check for Duplicate User Names"

cat /etc/passwd | cut -f1 -d":" | /bin/sort -n | /usr/bin/uniq -c | while read x ; do
[ -z "${x}" ] && break
set - $x
if [ $1 -gt 1 ]; then
uids=`/bin/gawk -F: '($1 == n) { print $3 }' n=$2 \/etc/passwd | xargs` 
echo "Duplicate User Name ($2): ${uids}"
else
  printf "\e[32mPASS. There are no duplicate user names. \e[0m\n"
fi
done
