#! /bin/bash

clear
printf "Ensure Password Fields are Not Empty"

PFieldsNEmpty= $(cat /etc/shadow | awk -F: '($2 == "" ) { print $1 " does not have a password "}')

echo $PFieldsNEmpty

if [ -z "$PFieldsNEmpty" ]; then
echo 	
	printf "\033[33;32m PASS \n"
else
	printf "\033[33;31m FAIL \n"
fi 

echo  -en "\e[0m"
