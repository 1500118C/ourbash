#! /bin/bash
clear
USER=$(cat /etc/passwd | grep "/bin/bash" | cut -d : -f 1)
list=(${USER})
printf "Accounts\n"

for i in "${list[@]}"
do
	day=$(chage -l $i | grep "Maximum number" | cut -d : -f 2)
	if [ $day -le 90 ]; then 
		printf "\e[32m$i\e[0m\n"
	else
		printf "\e[31m$i\e[0m\n"
	fi	

done
printf "If account name appears in red please run remediation\n"
